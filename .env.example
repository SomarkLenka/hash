# Database Configuration
# Set to 'true' to use Google Bigtable, 'false' for SQLite
USE_BIGTABLE=false

# Google Cloud Bigtable Configuration (required if USE_BIGTABLE=true)
BIGTABLE_PROJECT_ID=your-gcp-project-id
BIGTABLE_INSTANCE_ID=your-bigtable-instance-id
BIGTABLE_TABLE_ID=hashrate-monitor

# Google Cloud Authentication
# Option 1: Path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Option 2: Paste the entire service account JSON (for deployment)
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type": "service_account", ...}

# SQLite Configuration (used if USE_BIGTABLE=false)
DATABASE_PATH=hashrate.db

# Flask Configuration
SECRET_KEY=your-secret-key-here
PORT=5000

# Cleanup Configuration
RETENTION_DAYS=7